{{#extend "title"}}Admin |{{/extend}}
{{#extend "css"}}
<link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" type="text/css">
{{/extend}}
{{#extend "body_id"}}id="admin"{{/extend}}
{{#extend "body_class"}}class="events"{{/extend}}

{{#extend "body"}}
<div class="container">
    <div class="row">
        <h1>Menu</h1>
        <table id="staff">
            <thead>
                <th>Date</th>
                <th>DJ</th>
                <th></th>
            </thead>
            <tbody>
                {{#each events}}
                <tr>
                    <td><a href="/admin/events/{{ id }}">{{ moment date "MMMM Do YYYY" }}</a></td>
                    <td>{{ staff.name }}</td>
                    <td><a href="/admin/events/{{ id }}">Edit</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        <a href="add">Add</a>
    </div>
</div>
{{/extend}}
{{#extend "js"}}
<script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" type="text/javascript"></script>
<script>
    const dataTable = new simpleDatatables.DataTable('#staff', {
        searchable: true,
        fixedHeight: true,
    });
</script>
{{/extend}}